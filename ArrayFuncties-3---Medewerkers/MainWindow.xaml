<Window x:Class="ArrayFuncties_3___Medewerkers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayFuncties_3___Medewerkers"
        mc:Ignorable="d"
        Title="Medewerkers" Height="350" Width="400">
    <StackPanel HorizontalAlignment="Left" Margin="10">
        <WrapPanel>
            <Label Name="salaryLabel" Content="Salaris"></Label>
            <TextBox Name="SalaryTextBox" Width="150" IsEnabled="False" GotFocus="SalaryTextBox_GotFocus"></TextBox>
            <Button Name="updateButton" Margin="10 0 0 0" Padding="7" Content="Update" IsDefault="True" IsEnabled="False" Click="updateButton_Click"></Button>
        </WrapPanel>
        <ListBox Name="employeesListBox" Margin="20" Width="200" Height="200" SelectionChanged="employeesListBox_SelectionChanged"></ListBox>
        <Label Name="errorLabel" Content="Geen error"></Label>
    </StackPanel>
</Window>
